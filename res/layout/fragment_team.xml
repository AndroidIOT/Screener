<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
    <RelativeLayout android:gravity="top|bottom|center_vertical|fill_vertical|center|fill" android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill" android:id="@+id/rel_team" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tc_logo" android:layout_centerHorizontal="true" />
        <TextView android:textSize="30sp" android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/team" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/team" android:layout_below="@+id/logo" android:layout_centerHorizontal="true" android:color="#383838" />
        <TextView android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/caption" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/caption" android:layout_below="@+id/team" android:layout_centerHorizontal="true" android:color="#383838" />
        <TextView android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/caption1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/caption1" android:layout_below="@+id/caption" android:layout_centerHorizontal="true" android:color="#383838" />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rel2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/rel_team">
        <ImageView android:id="@+id/arrow" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/ic_expand_more_40dp" android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
